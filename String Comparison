package BM23AI198_TEJAS;
import java.util.Scanner;
public class s {
        public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);

            StringBuffer buffer = new StringBuffer();
            System.out.println("Initial capacity of StringBuffer: " + buffer.capacity());

            System.out.print("Enter a string to reverse and convert to uppercase: ");
            String inputString = scanner.nextLine();
            StringBuffer reversedBuffer = new StringBuffer(inputString);
            reversedBuffer.reverse();
            String reversedUpper = reversedBuffer.toString().toUpperCase();
            System.out.println("Reversed and Uppercase String: " + reversedUpper);

            System.out.print("Enter another string to append: ");
            String appendString = scanner.nextLine();
            reversedUpper += appendString;
            System.out.println("Final Resultant String: " + reversedUpper);

            scanner.close();
        }
    }

